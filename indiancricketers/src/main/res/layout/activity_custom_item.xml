<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.indiancricketers.CustomItem"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imgPrf"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:hint="PlayerName"
        android:text="@string/txtNm"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="31dp"
        app:layout_constraintLeft_toRightOf="@+id/imgPrf"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="208dp" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="143dp"
        android:layout_height="58dp"
        android:hint="PayerAge"
        android:text="@string/txtAg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txtName"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/imgPrf"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteY="98dp"
        tools:layout_editor_absoluteX="210dp" />
</android.support.constraint.ConstraintLayout>
